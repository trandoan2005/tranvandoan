        android:layout_above="@id/bottom_nav"
        android:layout_marginTop="4dp"
        android:divider="#B2DFDB"
        android:dividerHeight="1dp" />

    <!-- â›µ Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
