<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Quyền truy cập Internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HITCApp"
        tools:targetApi="31">
        <activity
            android:name=".menu_main"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Màn hình chính -->
        <activity
            android:name=".main_menu"
            android:exported="false"></activity> <!-- Các activity khác -->
        <activity
            android:name=".activity_checkout"
            android:exported="true" />
        <activity
            android:name=".activity_cart"
            android:exported="true" />
        <activity
            android:name=".activity_product_detail"
            android:exported="true" />
        <activity
            android:name=".HomeActivity"
            android:exported="true" />
        <activity
            android:name=".RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".LoginActivity"
            android:exported="true">

            <!-- Nếu bạn chỉ muốn LoginActivity là màn hình khởi đầu thì để intent-filter ở đây -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <!-- Nếu không, xoá phần intent-filter này -->
        </activity>
    </application>

</manifest>